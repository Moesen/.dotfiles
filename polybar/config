	type 			= custom/text
	content			= |
	content-foreground	= #555

[module/battery]
	type 			= internal/battery
	
	full-at			= 99
	low-at			= 5

	battery			= BAT1
	adapter			= ACAD

	poll-interval		= 2
	
	label-charging		= %percentage_raw%% %time:0:5%
	label-discharging	= %percentage_raw%% %time:0:5%

	format-padding		= 2

[module/cpu]
	type			= internal/cpu
	interval		= 2
	format-prefix-font	= 1
	format-prefix		= " "
	format-prefix-padding	= 2
	format-padding 		= 1
[module/temperature]
	type			= internal/temperature
	thermal-zone		= 0
	hwmon-path 		= /sys/devices/pci0000:00/0000:00:08.1/0000:04:00.0/hwmon/hwmon4/temp1_input
	warn-temperature 	= 80

	format-prefix 		= " "
	format-warn-prefix 	= " "
	format-prefix-foreground = ${colors.yellow}
	format-warn-prefix-foreground = ${colors.red}
	format 			=  <label>
	format-padding 		= 1
	format-warn 		= <label-warn>
	
	label 			= %temperature-c%
	label-warn 		= %temperature-c%
	label-warn-foreground 	= ${colors.red}

	ramp-foreground 	= ${colors.foreground-alt}

[module/volume]
	type 			= internal/pulseaudio
	format-font 		= 2
	use-ui-max 		= false
	format-volume 		= <label-volume>
	label-volume 		= 墳 %percentage:0:3%%
	label-volume-minlen	= 6
	label-volume-maxlen	= 6
	label-volume-foreground = ${root.foreground}
	label-muted 		= "     婢     "
	label-muted-foreground 	= #666
	format-padding 		= 2
	
	ramp-volume-foreground = ${color.magenta}
	ramp-volume-0 		= 

[module/bluetooth]
	type 			= custom/script
	label 			= %output:0:20%
	label-minlen		= 20
	label-maxlen 		= 20
	exec			= ~/.config/polybar/scripts/bluetooth.sh 
	interval		= 2
	click-left		= exec blueman-manager
	click-right		= exec ~/.config.polybar/scripts/toggle_bluetooth.sh
	format-padding		= 2
	format-foreground	= #ffffff

[module/spotify]
	type 			= custom/script
	tail 			= true
	
	label 			= %output:0:28%
	label-minlen		= 28
	label-maxlen		= 28
	label-font		= 2
	format-foreground	= ${colors.green}
	format-prefix		= "  "
	format-prefix-font	= 1
	format-prefix-foreground= ${colors.green}
	format			= <label>

	exec			= ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/memory]
	type 			= internal/memory
	interval		= 2
	format-prefix		= " "
	format-prefix-foreground= ${colors.blue}
	format-padding		= 2
	format-prefix-padding	= 2
